<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LombaTIF"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- MainActivity is now the launcher activity -->
        <activity
            android:name=".component.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LombaTIF">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- DashboardAdmin will no longer be the launcher activity -->
        <activity
            android:name=".component.DashboardAdmin"
            android:exported="true"
            android:label="Dashboard Admin"
            android:theme="@style/Theme.LombaTIF" />

        <activity
            android:name=".component.DashBoardPeserta"
            android:exported="false"
            android:label="@string/title_activity_dash_board_peserta"
            android:theme="@style/Theme.LombaTIF" />

        <activity
            android:name=".component.DaftarLomba"
            android:exported="false"
            android:label="@string/title_activity_daftar_lomba"
            android:theme="@style/Theme.LombaTIF" />

        <activity
            android:name=".component.Registrasi"
            android:exported="false"
            android:label="@string/title_activity_registrasi"
            android:theme="@style/Theme.LombaTIF" />
    </application>

</manifest>
